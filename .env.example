# ===============================================
# Core Application Configuration
# ===============================================

# Port on which the application will run (used by uvicorn/Docker)
PORT=8000

# ===============================================
# Telegram Bot Configuration
# ===============================================
TELEGRAM_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook/telegram

# ===============================================
# OpenAI (AI/SEO Engine) Configuration
# ===============================================
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o-mini

# ===============================================
# Stripe (Payment) Configuration
# ===============================================
STRIPE_SECRET=your-stripe-secret-key
STRIPE_PRICE_PRO=price_XXXXXXXXXXXXXXXX
STRIPE_WEBHOOK_SECRET=whsec_XXXXXXXXXXXXXXXX

# ===============================================
# Database & Cache
# ===============================================
# Used by Python: The redis service name in docker-compose is 'redis'.
REDIS_URL=redis://redis:6379/0
# Path for SQLite DB file
DB_PATH=seo_bot.db

# ===============================================
# Free Tier Settings
# ===============================================
# Daily free generation limit for users
FREE_LIMIT=5